{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mi aplicaci√≥n Symfony{% endblock %}</title>

    {# Archivo global de estilos con Bootstrap y otros CSS #}
    <link rel="stylesheet" href="{{ asset('build/global.css') }}">
    
    {# Otros archivos de estilo personalizados si es necesario #}
    {# <link rel="stylesheet" href="{{ asset('build/styles.css') }}"> #}

    <link rel="icon" href="{{ asset('images/favicon.ico') }}" type="image/x-icon">
</head>
<body>
    {% block body %}{% endblock %}

    {# Archivos JavaScript generados por Webpack Encore #}
    <script src="{{ asset('build/runtime.js') }}"></script>
    <script src="{{ asset('build/app.js') }}"></script>
</body>
</html>
